{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "lib",
    "allowJs": true,
    "rootDir": "/",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "lib/**/*"
  ],
  "include": [
    "src/**/*",
    "stories/**/*"
  ]
}
